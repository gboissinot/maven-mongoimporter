<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mongo="http://www.springframework.org/schema/data/mongo"
       xsi:schemaLocation="
        http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo.xsd
        http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans.xsd">

    <mongo:mapping-converter id="mappingConverter">
        <mongo:custom-converters>
            <mongo:converter>
                <bean class="com.boissinot.maven.util.mongoimport.ArtifactMongoWriterConverter"/>
            </mongo:converter>
        </mongo:custom-converters>
    </mongo:mapping-converter>

    <beans profile="local">
        <bean id="fongo" class="com.foursquare.fongo.Fongo">
            <constructor-arg value="InMemoryMongo"/>
        </bean>
        <bean id="mongo" factory-bean="fongo" factory-method="getMongo"/>

        <bean id="mongoDbFactory" class="org.springframework.data.mongodb.core.SimpleMongoDbFactory">
            <constructor-arg ref="mongo"/>
            <constructor-arg value="repo"/>
        </bean>

        <bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
            <constructor-arg ref="mongoDbFactory"/>
        </bean>
    </beans>

    <beans profile="remote">
        <bean id="mongoDbFactory" class="org.springframework.data.mongodb.core.SimpleMongoDbFactory">
            <constructor-arg name="mongo">
                <bean class="com.mongodb.Mongo">
                    <constructor-arg value="localhost" index="0"/>
                    <constructor-arg value="27017" index="1"/>
                </bean>
            </constructor-arg>
            <constructor-arg value="repo"/>
        </bean>
    </beans>

</beans>

