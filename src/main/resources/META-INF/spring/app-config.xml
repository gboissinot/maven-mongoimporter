<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="infra-config.xml"/>
    <import resource="app-flow.xml"/>

    <context:property-placeholder location="infra.properties"/>

    <bean class="com.boissinot.maven.util.mongoimport.ImportService">
        <constructor-arg ref="workingQueue"/>
        <constructor-arg>
            <bean class="com.boissinot.maven.util.mongoimport.ArtifactObjBuilderService"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="com.boissinot.maven.util.mongoimport.MavenIndexerRetriever">
                <constructor-arg value="${repo.url}"/>
            </bean>
        </constructor-arg>
    </bean>

</beans>