<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="com.boissinot.maven.util.mongoimport.launch.ImportService">
        <constructor-arg ref="workingQueue"/>
        <constructor-arg>
            <bean class="com.boissinot.maven.util.mongoimport.service.ArtifactObjBuilderService"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="com.boissinot.maven.util.mongoimport.service.MavenIndexerRetriever">
                <constructor-arg value="${repo.url}"/>
            </bean>
        </constructor-arg>
    </bean>

</beans>